<!-- addServerModal large-->
	<form action="/editserv" method="post">
		<div class="modal fade" id="editServerModal" tabindex="-1" role="dialog" aria-labelledby="editServerModalLabel" aria-hidden="true">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        <h4 class="modal-title" id="myModalLabel">Edit this server</h4>
		      </div>
		      <div class="modal-body">
		        <form class="form-horizontal">
				<fieldset>

				<!-- Text -->
				  <input id="userId" name="userId" type="hidden" class="form-control-modal input-md" value="<%= user._id %>">


				<!-- Text input-->
				<div class="form-group">
				  <label class="col-md-4 control-label" for="serverId">Server Id</label>
				  <!-- <div class="col-md-4"> -->
				  <input id="serverId" name="serverId" type="text" class="form-control-modal input-md" readonly="readonly">
				  <!-- </div> -->
				</div>

				<!-- Text input-->
				<div class="form-group">
				  <label class="col-md-4 control-label" for="serverName">Server name</label>
				  <!-- <div class="col-md-4"> -->
				  <input id="serverName" name="serverName" type="text" placeholder="my server" class="form-control-modal input-md" required="">
				  <span class="help-block"><i>The name of your server. Should be unique.</i></span>
				  <!-- </div> -->
				</div>



				<!-- Text input-->
				<div class="form-group">
				  <label class="col-md-4 control-label" for="serverIp">Server address</label>
				  <!-- <div class="col-md-4"> -->
				  <input id="serverIp" name="serverIp" type="text" placeholder="IP address or FQDN name" class="form-control-modal input-md" required="">
				  <span class="help-block"><i>A fully qualified hostname or ip address.</i></span>
				  <!-- </div> -->
				</div>

				<!-- Text input-->
				<div class="form-group">
				  <label class="col-md-4 control-label" for="serverPort">SSH port</label>
				  <!-- <div class="col-md-4"> -->
				  <input id="serverPort" name="serverPort" type="text" placeholder="22" class="form-control-modal input-md" required="">
				  <span class="help-block"><i>The port that SSH listens on.</i></span>
				  <!-- </div> -->
				</div>

				<!-- Text input-->
				<div class="form-group">
				  <label class="col-md-4 control-label" for="serverUser">SSH username</label>
				  <!-- <div class="col-md-4"> -->
				  <input id="serverUser" name="serverUser" type="text" placeholder="root" class="form-control-modal input-md" required="">
				  <span class="help-block"><i>The username that we connect with. We recommend using sudo privileges instead of root.</i></span>
				  <!-- </div> -->
				</div>

				<!-- Text input-->
				<div class="form-group">
				  <label class="col-md-4 control-label" for="serverTag">Server tags</label>
				  <!-- <div class="col-md-4"> -->
				  <input id="serverTag" name="serverTag" type="text" placeholder="enter tags for this server; use , to confirm tag" class="form-control-modal input-md"> <!--data-role="tagsinput"> -->
				  <span class="help-block"><i>Comma separated list of attributes to assign to the server.</i></span>
				  <!-- </div> -->
				</div>

				<!-- Select Multiple -->
				<div class="form-group">
				  <label class="col-md-4 control-label" for="serverGroup">Server group(s)</label>
				  <span class="help-block"><i>You can add groups in the Groups section.</i></span>
				  <!-- <div class="col-md-4"> -->
				    <select id="serverGroup" name="serverGroup" class="form-control-modal" multiple="multiple">
				      <% myGroups.forEach(function(mygroups, index) { %>
				      <option value="<%= mygroups._id %>"><%= mygroups.groupDetails.groupName %></option>
				      <% }); %>
				    </select>
				  <!-- </div> -->
				</div>

				<!-- Button -->
				<div class="form-group">
				  <label class="col-md-4 control-label" for="ServerAddGroup"></label>
				  <!-- <div class="col-md-4"> -->
				    <!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addGroupModal"><span class="fa fa-plus"></span> Add a group to your list</button> -->
				  <!-- </div> -->
				</div>
				</fieldset>
				</form>
		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
		        <button type="submit" class="btn btn-primary">Save</button>
		      </div>
		    </div>
		  </div>
		</div>
	</form>
<!-- end modal -->
