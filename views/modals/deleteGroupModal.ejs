
	<form action="/deletegroup" method="post">
		<div class="modal fade" id="deleteGroupModal" tabindex="-1" role="dialog" aria-labelledby="deleteGroupModalLabel" aria-hidden="true">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        <h4 class="modal-title" id="myModalLabel">Are you sure you want to delete this group?</h4>
		      </div>
		      <div class="modal-body">
		        <form class="form-horizontal">
				<fieldset>

				<!-- Text -->
				  <input id="userId" name="userId" type="hidden" class="form-control-modal input-md" value="<%= user._id %>">

				<div class="form-group">
				  <label class="col-md-0 control-label" for="groupId">Group Id</label>
				  <!-- <div class="col-md-4"> -->
				  <input id="groupId" name="groupId" type="text" class="form-control-modal input-md" readonly="readonly">
				  <!-- </div> -->
				</div>

				<!-- Text input-->
				<div class="form-group">
				  <label class="col-md-0 control-label" for="groupName">Group name</label>
				  <!-- <div class="col-md-4"> -->
				  <input id="groupName" name="groupName" type="text" readonly="readonly" class="form-control-modal input-md">
				  <!-- </div> -->
				</div>

				<div class="form-group">
					<label class="col-md-0 control-label" for="count">Number of servers in this group</label>
					<!-- <div class="col-md-4"> -->
					<input id="count" name="count" type="text" readonly="readonly" class="form-control-modal input-md">
					<p class="text-danger"><i>You can't delete a group which contains servers.</i></p>
					<!-- </div> -->
				</div>

				</fieldset>
				</form>
		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
						<button type="submit" name ="submit" class="btn btn-danger">Delete this group</button>
		      </div>
		    </div>
		  </div>
		</div>
	</form>
