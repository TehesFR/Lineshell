	<form action="/editscript" method="post">

		<div class="modal fade modal-fullscreen force-fullscreen" id="editScriptModal" tabindex="-1" role="dialog" aria-labelledby="editScriptModal" aria-hidden="true">
		  <div class="modal-dialog">
			<div class="container modal-content">
			  <div class="modal-body">
				<form class="form-horizontal">
				<fieldset>

				<!-- Text -->
				  <input id="userId" name="userId" type="hidden" class="form-control-modal input-md" value="<%= user._id %>">

					<div class="form-group">
						<label class="col-md-4 control-label" for="groupId">Script Id</label>
						<!-- <div class="col-md-4"> -->
						<input id="scriptId" name="scriptId" type="text" class="form-control-modal input-md" readonly="readonly">
						<!-- </div> -->
					</div>

				<!-- Text input-->
				<div class="form-group">
				  <label class="col-md-4 control-label" for="scriptName">Script name</label>
				  <!-- <div class="col-md-4"> -->
				  <input id="scriptName" name="scriptName" type="text" placeholder="my script" class="form-control-modal input-md" required="">
				  <span class="help-block"><i>The name of your script.</i></span>
				  <!-- </div> -->
				</div>
				<div class="form-group">
				  <label class="col-md-4 control-label" for="scriptNotes">Script notes</label>
				  <!-- <div class="col-md-4"> -->
				  <input id="scriptNotes" name="scriptNotes" type="text" placeholder="my script notes" class="form-control-modal input-md" required="">
				  <span class="help-block"><i>Some notes for your script.</i></span>
				  <!-- </div> -->
				</div>
				<div class="form-group">
				  <label class="col-md-0 control-label" for="scriptContentEdit"><p>Script content</p></label>

					<!-- <textarea rows="20" cols="150" name="scriptContentEdit" id="scriptContentEdit"></textarea> -->

					<!--<textarea class="form-control" rows="8" id="scriptContentEdit" name="scriptContentEdit"></textarea>-->

					<div id="editor2"></div>
					<textarea rows="20" class="form-control-modal" name="scriptContentEdit" id="scriptContentEdit"></textarea>

				</div>

				</fieldset>
			</form>
			  </div>
			  <div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
				<button type="submit" class="btn btn-primary">Save</button>
			  </div>
			</div>
		  </div>
		</div>
	</form>
<!-- end modal -->
